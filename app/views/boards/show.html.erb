<div class="container">
	<h1><%= @board.title %></h1>

	<%= link_to "Edit Board", edit_board_path(@board), class: "btn btn-sm btn-warning" %>
	<%= link_to "Delete Board", board_path(@board), method: :delete, data: {confirm: "Are you sure"}, class:"btn btn-sm btn-danger" %>
	<%= link_to "Back to Boards", boards_path, class: "btn btn-sm btn-default" %>

	<div class="row">
		<div class="col-md-12">
			<% @board.to_dos.each do |todo| %>
				<div class="col-sm-3 well box">
					<div class="todo_title">
						<%= link_to todo.title, edit_board_to_do_path(@board, todo.id) %> <br>
					</div>

					<% todo.cards.each do |card| %>
						<div class="well">
							<%= card.title %>
							<%= link_to "Add Details", board_to_do_card_path(@board,todo,card.id)%>	
						</div>
					<% end %>

					 <%= simple_form_for ([@board, todo, todo.cards.build]) do |f| %>
						<%= f.input :title, label:false %>
						<%= f.button :submit %>
					<% end %>
				</div> 
			<% end %>
			<div class="col-sm-3 well box">
				<%= render 'to_dos/form' %>
			</div>
		</div>
	</div>
</div>

