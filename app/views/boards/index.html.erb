<div class="container">
	<h1>Board List</h1>
	<%= link_to "New Board", new_board_path, class:"btn btn-sm btn-success" %>
	<div class="row">
		<% @boards.each do |board| %>
			<div class="col-sm-2 well_board board_box">
				<%= link_to board.title , board, class:"board_title" %>
				<%= link_to "", board_path(board), method: :delete, data: {confirm: "Are you sure"} , class: "glyphicon glyphicon-remove" %>
			</div>
		<% end %>
	</div>
</div>

