<div class="container login">
	<div class="col-md-8 col-md-offset-2">
		

		 <%= simple_form_for ([@board, @to_do, @card]) do |f| %>
			<%= f.input :title, placeholder: "Add title..." %>
			<%= f.input :description, placeholder: "Add description..." %>
			<%= f.date_field :duedate, label: "Set duedate:" %>
			<br>
			<br>
			<%= f.button :submit, class: "btn btn-sm btn-default" %>
		<% end %>
	</div>
</div>
